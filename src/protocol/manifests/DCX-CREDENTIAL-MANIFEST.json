{
    "id": "dcx-credential-manifest",
    "name": "DCX Credential Manifest",
    "description": "This is the base credential manifest for DCX credentials. It is used to define the structure of the credential and the presentation request.",
    "spec_version": "https://identity.foundation/credential-manifest/spec/v1.0.0/",
    "issuer": {
        "id": "[replaced dynamically]",
        "name": ""
    },
    "output_descriptors": [
        {
            "id": "placeholder-report-summary",
            "name": "Placeholder Report - Summary",
            "schema": "https://example.com/schemas/PlaceholderReportSummaryCredential"
        }
    ],
    "format": {
        "jwt_vc": {
            "alg": [
                "EdDSA"
            ]
        }
    },
    "presentation_definition": {
        "id": "presentation-data",
        "input_descriptors": [
            {
                "id": "presentation-input-descriptor",
                "purpose": "Placeholder input descriptor for example purposes",
                "constraints": {
                    "fields": [
                        {
                            "path": [
                                "$.type[*]"
                            ],
                            "filter": {
                                "type": "string",
                                "pattern": "^*$"
                            }
                        },
                        {
                            "path": [
                                "$.credentialSubject.holder.name.first",
                                "$.credentialSubject.holder.name.last",
                                "$.credentialSubject.holder.phone[0].number"
                            ]
                        }
                    ]
                }
            }
        ]
    }
}